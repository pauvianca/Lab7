<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_navy"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Small hint at the top -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to edit, long press for options"
        android:textColor="@color/text_muted"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="8dp" />

    <!-- Search box for filtering by text -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search in entries..."
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="@android:color/white"
        android:inputType="text"
        android:textColor="@color/text_dark"
        android:textColorHint="@color/text_muted" />

    <!-- Filter spinner (All entries / Selected date only) -->
    <Spinner
        android:id="@+id/spFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/picker_header_light"
        android:spinnerMode="dropdown" />

    <!-- Export button -->
    <Button
        android:id="@+id/btnExport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export diary to text file"
        android:layout_marginBottom="12dp" />

    <!-- ListView fills ALL remaining space and scrolls -->
    <ListView
        android:id="@+id/lvEntries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:paddingBottom="12dp" />

</LinearLayout>
